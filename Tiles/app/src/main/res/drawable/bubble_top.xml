<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
<shape
    android:shape="rectangle">
    <corners
        android:radius="40dp"
        android:bottomRightRadius="10dp"/>
    <gradient
        android:angle="45"

        android:type="linear"
        android:startColor="#FFD700"
        android:endColor="#f2709c"/>
    <size
        android:width="80dp"
        android:height="80dp"/>
